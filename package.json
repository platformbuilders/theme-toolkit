{
  "name": "@platformbuilders/theme-toolkit",
  "version": "0.1.1",
  "description": "Theme helpers to use combined with Fluid React Elements ",
  "author": "Platform Builders <apps@platformbuilders.io>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformbuilders/theme-toolkit.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "start": "rollup -c -w",
    "prepare": "husky install && npm run build",
    "pretty": "prettier --config ./.prettierrc.js --write \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint": "tsc && eslint '*/**/*.{ts, tsx}' --fix"
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "yarn pretty",
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@types/react-native": "^0.67.2",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-sonarjs": "^0.14.0",
    "eslint-plugin-typescript": "^0.14.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react-native": "^0.67.3",
    "rollup": "^2.77.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.32.1",
    "rollup-plugin-url": "^3.0.1",
    "styled-components": "^5.3.5",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
